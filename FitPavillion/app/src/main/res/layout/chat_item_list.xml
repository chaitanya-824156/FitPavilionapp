<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_chat_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:elevation="12dp"
        android:scrollbarFadeDuration="@integer/material_motion_duration_medium_2"
        app:cardBackgroundColor="@color/pale"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="2dp">


            <TextView
                android:id="@+id/item_chat_to_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="2dp"
                android:padding="2dp"
                android:text="message"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/item_chat_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingStart="4dp"
                android:paddingBottom="2dp"
                android:text="updated"
                android:textAppearance="?android:textAppearance"
                android:textSize="10sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/item_chat_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:elevation="12dp"
        android:scrollbarFadeDuration="@integer/material_motion_duration_medium_2"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="2dp">


            <TextView
                android:id="@+id/item_chat_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="2dp"
                android:padding="2dp"
                android:text="message"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/item_chat_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingEnd="4dp"
                android:paddingBottom="4dp"
                android:text="updated"
                android:textAppearance="?android:textAppearance"
                android:textSize="10sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
